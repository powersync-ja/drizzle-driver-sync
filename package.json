{
  "name": "@powersync/drizzle-driver-sync",
  "version": "0.5.0",
  "description": "Sync drizzle driver for OP-SQLite",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "default": "./lib/src/index.js",
        "types": "./lib/src/index.d.ts"
      },
      "require": {
        "default": "./dist/index.cjs",
        "types": "./dist/index.d.cts"
      }
    }
  },
  "author": "JOURNEYAPPS",
  "license": "Apache-2.0",
  "files": [
    "lib",
    "dist"
  ],
  "repository": "https://github.com/powersync-ja/drizzle-driver-sync",
  "bugs": {
    "url": "https://github.com/powersync-ja/drizzle-driver-sync/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "homepage": "https://docs.powersync.com",
  "scripts": {
    "build": "tsc -b && rollup --config",
    "build:prod": "tsc -b --sourceMap false && rollup --config --sourceMap=false",
    "clean": "rm -rf lib dist tsconfig.tsbuildinfo",
    "watch": "tsc --build -w",
    "test": "vitest",
    "test:exports": "attw --pack ."
  },
  "devDependencies": {
    "@journeyapps/wa-sqlite": "^1.2.0",
    "@op-engineering/op-sqlite": "^15.0.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^20.17.6",
    "drizzle-orm": "^0.35.2",
    "rollup-plugin-dts": "^6.2.3",
    "vite": "^6.1.0",
    "vite-plugin-top-level-await": "^1.4.4",
    "vite-plugin-wasm": "^3.3.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@powersync/common": "^1.36.0",
    "@powersync/web": "^1.25.1"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
